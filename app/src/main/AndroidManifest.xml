        <activity android:name=".AddReviewsActivity"
            android:label="@string/c_title_reviews_add"
            android:parentActivityName=".ReviewsActivity"></activity>
        <activity
            android:name=".ReviewsActivity"
            android:label="@string/c_title_reviews_main"
            android:parentActivityName=".PropertyActivity" />
        <activity
            android:name=".PaymentActivity"
            android:label="@string/c_title_payment"
            android:parentActivityName=".BookingActivity" />
        <activity
            android:name=".BookingActivity"
            android:label="@string/c_title_conbooking"
            android:parentActivityName=".PropertyActivity" />
        <activity
