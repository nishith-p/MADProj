            android:label="@string/c_title_settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MySavedActivity"
            android:label="@string/c_title_saved"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MyReviewsActivity"
            android:label="@string/c_title_reviews"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MyBookingsActivity"
            android:label="@string/c_title_bookings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MyPropertiesActivity"
            android:label="@string/c_title_mprop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditPropertyActivity"
            android:label="@string/c_title_aprop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".PropertyActivity"
            android:label="Y"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
